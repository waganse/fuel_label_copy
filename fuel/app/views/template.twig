<!DOCTYPE html>
<!--[if lt IE 7]> <html class="lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>    <html class="lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>    <html class="lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class=""> <!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    {{ css }}
</head>
<body>

<header id="header">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="{{ link_base }}/label/"><i class="glyphicon glyphicon-cog"></i> JIRA TOOL</a>
      </div>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <div style="position:absolute;right:15px;padding:8px 0;">
        {% if current_user %}
        {{ link_addLabel }}
        {{ link_addLabelGroup }}
        {{ link_logout }}
        {% else %}
        {{ link_login }}
        {% endif %}
        </div>
      </div>
    </nav>
</header>

<footer id="footer">
    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex5-collapse">
          <ul class="nav navbar-nav">
            <li>{{ link_labelCopy }}</li>
          {% if current_user %}
            <li>{{ link_label }}</li>
            <li>{{ link_labelGroup }}</li>
          {% endif %}
          </ul>
          {% if current_user %}
          <p class="navbar-text pull-right"><i class="glyphicon glyphicon-user"></i> {{ current_user.username }}</p>
          {% endif %}
        </div><!-- /.navbar-collapse -->
    </nav>
</footer>

<main class="main" style="width:80%;margin:100px auto;color:#666;">
    {{ content }}
</main>

<script>
  var TOKEN_NAME = '{{ token_name }}';
</script>
<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/zeroclipboard/2.1.5/ZeroClipboard.min.js"></script>
{{ js_bootstrap }}
{{ js_main }}
{{ token_script }}

</body>
</html>