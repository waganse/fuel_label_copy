<h2>New Label Group</h2>
<hr>

{% if error %}
<div class="alert alert-danger" role="alert">{{ error|e }}</div>
{% endif %}

<form class="form-horizontal" action="{{ link_base }}labelgroup/create/" accept-charset="utf-8" method="post">
    <fieldset>
        <div class="form-group">
            <label class="control-label">Name</label>
                <input class="col-md-4 form-control" placeholder="Name" name="name" type="text">
        </div>
        <div class="form-group">
            <label class="control-label">Remarks</label>
                <textarea class="col-md-4 form-control" placeholder="Remarks" name="remarks"></textarea>
        </div>
        <div class="form-group">
            <label class="control-label">&nbsp;</label>
            <input class="btn btn-primary" name="submit" value="Save" type="submit" id="form_submit">       </div>
    </fieldset>
</form>
